{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "yarn",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install dependencies",
            "args": []
        },
        {
            "taskName": "run development server",
            "args": ["run", "dev"]
        },
        {
            "taskName": "build production assets",
            "args": ["run", "build"]
        },
        {
            "taskName": "clean environment",
            "args": ["run", "clean"]
        }
    ]
}
